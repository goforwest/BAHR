###############################################
# BAHR - Example Environment Configuration
# Copy to .env and adjust as needed
# Last Updated: November 9, 2025
# See: docs/technical/ARCHITECTURE_OVERVIEW.md (Environment Catalog)
###############################################

# === CORE APPLICATION ===
PROJECT_NAME=BAHR API
API_VERSION=1.0.0
ANALYSIS_ENGINE_VERSION=1.0.0
LOG_LEVEL=INFO

# === SECURITY ===
# CRITICAL: Generate strong key in production
# Generate: openssl rand -hex 32
SECRET_KEY=dev-insecure-key-CHANGE-IN-PRODUCTION

# === DATABASE ===
DATABASE_URL=postgresql://bahr:bahr_dev_password@localhost:5432/bahr_dev

# === CACHE & RATE LIMITING ===
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_ANALYSIS=3600
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600

# === JWT AUTHENTICATION ===
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# === NLP CONFIGURATION ===
# Set to false if CAMeL Tools fails (fallback to PyArabic only)
NLP_ENABLE_MORPHOLOGY=true

# === MONITORING & OBSERVABILITY ===
# Optional: Sentry DSN for error tracking (Week 2+)
SENTRY_DSN=

# === FEATURE FLAGS ===
MAINTENANCE_MODE=false

# === PERFORMANCE TUNING (Optional) ===
# DB_POOL_SIZE=10
# DB_MAX_OVERFLOW=20
# REDIS_MAX_CONNECTIONS=50

# === CORS SETTINGS (Frontend URL) ===
# CORS_ORIGINS=http://localhost:3000,https://bahr.app

